page {
    padding: 0;
    margin: 0;
}
/* 没有任何通知的时候的提醒语和图片 */
.unpublish{
    width: 90%;
    height: 90%;
    margin: auto;
    margin-top: 100rpx;
}
.unpublish image{
    width: 100%;
    height: 70%;
}
.unpulishText {
    text-align: center;
    font-size: 40rpx;
    font-weight: 600;
}

/* 发布通知按钮 */
.publishBtn {
    position: fixed;
    bottom: 100rpx;
    right: 20rpx;
    height: 150rpx;
    width: 150rpx;
    background-color:#a2a5d3;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.publishBtn image {
    height: 130rpx;
    width: 130rpx;
}

/* 通知信息的展示 */
.publishContent {
    display: flex;
    justify-content: space-between;
    margin: 0 20rpx 0 20rpx;
}
/* 通知配图 */
.publishContent image{
    width: 240rpx;
    height: 190rpx;
}
/* 通知详细内容 */
.publishDetail {
    width: 380rpx;
    color: #887e7e;
    /* 多行文本溢出省略 */
    overflow: hidden;
    /* 多出部分用...代替 */
    text-overflow: ellipsis;
    /* 定义为盒子模型显示 */
    display: -webkit-box;
    /* 用来限制在一个块元素显示的文本的行数 */
    -webkit-line-clamp: 5;
    /*从上到下垂直排列子元素（设置伸缩盒子的子元素排列方式） */
    -webkit-box-orient: vertical;

}

.publishElse {
    display: flex;
    justify-content: space-between;
    margin: 20rpx 20rpx 0 20rpx;
    /* background-color:red; */
}
/* 通知标签 */
.publishTag {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 170rpx;
}
.publishTag image{
    width: 45rpx;
    height: 45rpx;
}