/* 清除全局样式 */
page {
    margin: 0;
    padding: 0;
    background-color: #F5F6FA;
}
/* 功能分类 */
.capacity {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 100rpx;
    background-color: #B3D2E7;
}
/* 功能子项 */
.item {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 100rpx;
    width: 100%;
    font-size: large;
    background-color: #4BB5E9;
    color: #fff;
}
.item-bottom {
    position: absolute;
    top: 100rpx;
    width: 300rpx;
    border-bottom: 3rpx solid #000000;
}

/* 所有信息的集合 */
.check {
  position: absolute;
  top: 120rpx;
  left: 0;
  width: 100%;
}
/* 每条信息卡片 */
.card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 20rpx 0 20rpx 0;
  background-color: #fff;
  box-shadow: 0 2rpx 0 0 #cecece;
}
/* 上传的图片大小 */
.img {
  width: 300rpx;
  height: 200rpx;
  margin: 10rpx;
}
/* 上传人信息 */
.message {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 400rpx;
  margin: 30rpx 0 30rpx 30rpx;
  font-size: 30rpx;
}


/* 滑动后的按钮 */
.item-oper {
  display: flex;
  width: 240rpx;
  height: 250rpx;
}
.items {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  border: 2rpx solid #fff;
}
/* 通过按钮 */
.pass {
  margin-right: 10rpx;
  background-color: rgb(52, 223, 52);
}
/* 打回按钮 */
.fail {
  background-color: red;
}