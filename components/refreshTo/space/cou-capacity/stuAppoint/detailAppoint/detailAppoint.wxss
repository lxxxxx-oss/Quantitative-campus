.appointBtn {
    width: 100rpx;
    margin: 0 auto;
    padding: 10rpx;
    line-height: 50rpx;
    background-color: #85ce61;
    border-radius: 30rpx;
}
.su-table-box {
    height: 100%;
    margin-top: 50rpx;
    padding-bottom: 40rpx;
}

.su-table, .tableTh {
    margin: 0 auto;
    display: table;
    border-collapse: collapse;
    background-color: #FFFFFF;
    width: 90%;
}
.su-table {
    height: 100%;
    overflow-x: scroll;
    z-index: 111;
}
.su-tr {
    display: table-row;
}
.su-th {
    display: table-cell;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 40rpx;
    text-align: center;
    background-color: #87CEFA;
    color: #FFFFFF;
}

.su-td {
    display: table-cell;
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border: 1rpx solid #DDDDDD;
    font-size: 32rpx;
}

.classCommittee,.showIcon,.hiddenIcon {
    position: absolute;
    height: 60rpx;
    top: 50%;
    left: 50rpx;
    transform: translate(0, -50%);
}
.showIcon {
    display: block;
}
.hiddenIcon {
    display: none;
}
