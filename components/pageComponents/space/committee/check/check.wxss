page {
    background-color: #F5F6FA;
}
/* 所有信息的集合 */
.check {
    position: absolute;
    top: 120rpx;
    left: 0;
    width: 100%;
}
/* 每条信息卡片 */
.card {
    display: flex;
    justify-content: space-between;
    border: 2rpx solid #cecece;
    /* height: 300rpx; */
    background-color: #fff;
}
/* 上传的图片大小 */
.img {
    height: 160rpx;
    width: 160rpx;
    margin: 30rpx;
}
/* 上传人信息 */
.message {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin: 30rpx 0 30rpx 30rpx;
    font-size: 30rpx;
}


/* 滑动后的按钮 */
.item-oper {
    display: flex;
    width: 240rpx;
    height: 250rpx;
}
.items {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    border: 2rpx solid #fff;
}
/* 通过按钮 */
.pass {
    margin-right: 10rpx;
    background-color: rgb(52, 223, 52);
}
/* 打回按钮 */
.fail {
    background-color: red;
}