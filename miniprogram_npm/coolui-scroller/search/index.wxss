.wx-coolui-scroller-search {
  display: flex;
  overflow: hidden;
}

.wx-coolui-scroller-search .search-inner {
  background-color: #f7f7f7;
  flex: 1;
  height: 68rpx;
  margin-right: 0rpx;
  padding: 0 20rpx 0 68rpx;
  position: relative;
  border-radius: 5rpx;
  display: flex;
}

.wx-coolui-scroller-search .search-inner.round {
  border-radius: 68rpx;
}

.wx-coolui-scroller-search .search-inner .inner {
  position: relative;
  flex: 1;
}

.wx-coolui-scroller-search .search-inner .search-input {
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  background: transparent;
  position: relative;
  z-index: 5;
  flex: 1;
}

.wx-coolui-scroller-search .search-inner .search-icon {
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 28rpx;
  width: 68rpx;
  height: 68rpx;
}

.wx-coolui-scroller-search .search-inner .search-placeholder {
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
  font-size: 28rpx;
  color: #999;
  text-align: center;
  line-height: 68rpx;
  height: 68rpx;
  transition: all 0.3s;
  display: flex;
}

.wx-coolui-scroller-search .search-inner .search-close {
  display: none;
  background-color: #f7f7f7;
  width: 40rpx;
  height: 100%;
  background-size: cover;
  position: absolute;
  right: 0;
  padding: 0 20rpx 0 20rpx;
  top: 50%;
  z-index: 10;
  transform: translateY(-50%);
  background-size: 40rpx;
  background-repeat: no-repeat;
  background-position: 20rpx center;
  background-image: url("data:image/png;base64,");
}

.wx-coolui-scroller-search .button {
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  padding: 0 14px;
  opacity: 0;
  visibility: hidden;
  transition: margin-right 0.3s, opacity 0.3s;
}

.wx-coolui-scroller-search.on .search-placeholder {
  text-align: left;
  left: 0rpx;
  transform: translateX(0);
}

.wx-coolui-scroller-search.on .button {
  display: block;
  margin-left: 20rpx;
  margin-right: 0;
  opacity: 1;
  visibility: visible;
}

.wx-coolui-scroller-search.clearable .search-inner .search-input {
  margin-right: 58rpx;
}

.wx-coolui-scroller-search.clearable .search-inner .search-close {
  display: block;
}
